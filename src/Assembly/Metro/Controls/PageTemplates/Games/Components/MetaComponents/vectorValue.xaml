<UserControl x:Class="Assembly.Metro.Controls.PageTemplates.Games.Components.MetaComponents.VectorValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="650" Height="28"
             HorizontalAlignment="Left">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                <TextBlock x:Name="lblValueName" Text="{Binding Name}" ToolTip="{Binding Name}" Style="{DynamicResource GenericTextblock}" Width="180" VerticalAlignment="Center" Margin="0,0,0,0" TextTrimming="CharacterEllipsis"/>
                <TextBlock x:Name="lblXValueName" Text="x" ToolTip="X Value" Style="{DynamicResource GenericTextblock}" Width="10" Margin="10,0,0,0" VerticalAlignment="Center" />
                <TextBox x:Name="txtXValue" Text="{Binding X}" VerticalAlignment="Center" Width="100" Padding="0,0,0,0" Margin="0,0,0,0" />
                <TextBlock x:Name="lblYValueName" Text="y" ToolTip="Y Value" Style="{DynamicResource GenericTextblock}" Width="10" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <TextBox x:Name="txtYValue" Text="{Binding Y}" VerticalAlignment="Center" Width="100" Padding="0,0,0,0" Margin="0,0,0,0" />
                <TextBlock x:Name="lblZValueName" Text="z" ToolTip="Z Value" Style="{DynamicResource GenericTextblock}" Width="10" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <TextBox x:Name="txtZValue" Text="{Binding Z}" VerticalAlignment="Center" Width="100" Padding="0,0,0,0" Margin="0,0,0,0" />
                <TextBlock x:Name="lblType" Text="vector" Style="{DynamicResource GenericTextblock}" Width="50" VerticalAlignment="Center" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>