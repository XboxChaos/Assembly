		<Grid Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
			<Border BorderThickness="0,1,0,0" BorderBrush="#434346" Background="#FF303032">
				<Grid>
					<CheckBox x:Name="cbShowInvisibles" Content="Show Invisibles" Margin="0,0,10,0" HorizontalAlignment="Right"
					          VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="cbShowInvisibles_Altered"
					          Unchecked="cbShowInvisibles_Altered" />
					<StackPanel Orientation="Horizontal">
						<Button x:Name="btnPluginSave" ToolTip="Save the current changes to the cache file. (Ctrl + S)" Content="Save Changes"
						        Width="100" Margin="10,0,0,0" Click="btnPluginSave_Click" />
						<xctk:SplitButton Content="Quick Poke" x:Name="sbPluginPoke" Margin="5,0,0,0" Width="100" Click="btnPluginPokeChanged_Click" ToolTip="Pokes current changes to the cache file in memory. Click the arrow for more options.">
							<xctk:SplitButton.DropDownContent>
								<StackPanel>
									<MenuItem Header="Poke Changes" Click="btnPluginPokeChanged_Click" ToolTip="Pokes current changes to the cache file in memory. (Ctrl + P)" Foreground="White"/>
									<MenuItem Header="Poke All" Click="btnPluginPokeAll_Click" ToolTip="Pokes the entire tag to the cache file in memory (slow!). (Ctrl + Shift + P)" Foreground="White"/>
								</StackPanel>
							</xctk:SplitButton.DropDownContent>
						</xctk:SplitButton>
						<xctk:SplitButton Content="Quick Reload" x:Name="sbPluginRefresh" Margin="5,0,0,0" Width="110" Click="btnPluginRefresh_Click" ToolTip="Reloads the plugin and tagdata from the cache file. Click the arrow for more options.">
							<xctk:SplitButton.DropDownContent>
								<StackPanel>
									<MenuItem Header="Reload From File" Click="btnPluginRefresh_Click" ToolTip="Reloads the plugin and tagdata from the cache file. (Ctrl + R)" Foreground="White"/>
									<MenuItem Header="Reload From Memory" x:Name="miPluginRefreshMem" Click="btnPluginRefreshFromMemory_Click" ToolTip="Reloads the plugin and tagdata from memory. (Ctrl + Alt + R)" Foreground="White"/>
								</StackPanel>
							</xctk:SplitButton.DropDownContent>
						</xctk:SplitButton>
						<Button x:Name="btnPluginRevisionViewer"
						        ToolTip="View who researched the plugin and what they did. (Ctrl + Shift + R)" Content="Revisions"
						        Width="70" Margin="5,0,0,0" Click="btnPluginRevisionViewer_Click" />
					</StackPanel>
				</Grid>
			</Border>
		</Grid>
	</Grid>
</UserControl>