<UserControl x:Class="Atlas.Views.Cache.TagEditorComponents.IntValue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Height="28" Width="580"
             HorizontalAlignment="Left">
	<Grid>
		<StackPanel Orientation="Horizontal">
			<TextBlock Text="{Binding Name}" ToolTip="{Binding Name}" Width="180" 
					   VerticalAlignment="Center" Margin="0,0,0,0" TextTrimming="CharacterEllipsis" />
			<TextBox Text="{Binding Value}" VerticalAlignment="Center" Width="175" Padding="0,0,0,0" 
					 Margin="20,0,0,0" />
			<TextBlock Text="{Binding Type}" VerticalAlignment="Center" Width="150" 
					   Margin="20,0,0,0" />
		</StackPanel>
	</Grid>
</UserControl>