<UserControl x:Class="Atlas.Views.Cache.TagEditorComponents.Comment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" Width="602"
             HorizontalAlignment="Left">
	<Grid>
		<TextBlock x:Name="lblTitle" Text="{Binding Name}" Height="18" Margin="0,4,0,0" Foreground="#FF999999"
		           VerticalAlignment="Top" Padding="5,0,5,5" Background="#FF474747" />
		<TextBlock x:Name="lblComment" Text="{Binding Text}" HorizontalAlignment="Stretch" Margin="0,28,0,4"
		           VerticalAlignment="Top" Foreground="#FF999999" Padding="5,0,5,5" TextWrapping="Wrap" />

	</Grid>
</UserControl>