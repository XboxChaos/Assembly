<UserControl x:Class="Assembly.Metro.Controls.StringIDInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             mc:Ignorable="d"
             Height="22"
             d:DesignWidth="300"
             x:Name="control">
	<controls:AutoCompleteBox x:Name="textbox"
	                   Text="{Binding Text, ElementName=control, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
	                   MinimumPopulateDelay="200"
	                   IsTextCompletionEnabled="False"
	                   VerticalAlignment="Top"
	                   HorizontalAlignment="Stretch"
	                   Height="22"
	                   Populating="textbox_Populating"
	                   GotFocus="textbox_GotFocus" />
</UserControl>